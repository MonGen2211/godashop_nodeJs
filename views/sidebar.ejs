<div class="inner-aside">

	<div class="category">
		<h5>Danh mục sản phẩm</h5>
		<ul>
			<li class="<%= !category_id ? 'active' : '' %>">
				<a href="/san-pham.html" title="Tất cả sản phẩm" target="_self">Tất cả sản phẩm
				</a>
			</li>
			<%  for (const category of categories) {
				
			 %>
			<li class="<%= Number(category_id) === Number(category.id) ? 'active' : '' %>">
				<a href="<%= helpers.getRouterCategory(category) %>" title="<%=category.name%>" target="_self"><%=category.name%></a>
			</li>
			<%}%>
		</ul>
	</div>
	
	<div class="price-range">
							<h5>Khoảng giá</h5>
							<ul>
								<li >
									<label for="filter-less-100">
									<input <%= (typeof priceRange != 'undefined') && priceRange == '0-100000' ? 'checked' : '' %> type="radio" id="filter-less-100" name="filter-price" value="0-100000">
									<i class="fa"></i>
									Giá dưới 100.000đ
									</label>
								</li>
								<li >
									<label for="filter-100-200">
									<input <%= (typeof priceRange != 'undefined') &&  priceRange == '100000-200000' ? 'checked' : '' %> type="radio" id="filter-100-200" name="filter-price" value="100000-200000">
									<i class="fa"></i>
									100.000đ - 200.000đ
									</label>
								</li>
								<li >
									<label for="filter-200-300">
									<input <%= (typeof priceRange != 'undefined') &&  priceRange == '200000-300000' ? 'checked' : '' %> type="radio" id="filter-200-300" name="filter-price" value="200000-300000">
									<i class="fa"></i>
									200.000đ - 300.000đ
									</label>
								</li>
								<li >
									<label for="filter-300-500">
									<input <%= (typeof priceRange != 'undefined') &&  priceRange == '300000-500000' ? 'checked' : '' %> type="radio" id="filter-300-500" name="filter-price" value="300000-500000">
									<i class="fa"></i>
									300.000đ - 500.000đ
									</label>
								</li>
								<li >
									<label for="filter-500-1000">
									<input <%= (typeof priceRange != 'undefined') &&  priceRange == '500000-1000000' ? 'checked' : '' %> type="radio" id="filter-500-1000" name="filter-price" value="500000-1000000">
									<i class="fa"></i>
									500.000đ - 1.000.000đ
									</label>
								</li>
								<li >
									<label for="filter-greater-1000">
									<input <%= (typeof priceRange != 'undefined') &&  priceRange == '1000000-greater' ? 'checked' : '' %> type="radio" id="filter-greater-1000" name="filter-price" value="1000000-greater">
									<i class="fa"></i>
									Giá trên 1.000.000đ 
									</label>
								</li>
							</ul>
	</div>

</div>